<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.xfath.hormart.fragments.profilefragment.ProfilePhotoDetailFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_detailfoto"/>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/btn_back"
        android:layout_height="40dp"
        android:text="@string/kembali"
        android:textColor="@color/white"
        android:fontFamily="@font/titillium"
        android:layout_below="@+id/tvdetailfoto"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_btn_login"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvdetailfoto"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@color/white"
        android:textColor="@color/black"
        android:text="hmmmmmm"/>

    <com.xfath.hormart.utils.ZoomImage
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imgFullscreen"/>

</RelativeLayout>